{
  "name": "root",
  "description": "Lola.tech's collection of Open Source GraphQL projects",
  "private": true,
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint",
      "git add"
    ]
  },
  "engines": {
    "yarn": ">=1.0.0",
    "node": ">=10.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e",
      "pre-commit": "lint-staged"
    }
  },
  "scripts": {
    "release": "lerna publish",
    "prerelease": "eslint . && lerna run test"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "lerna": "^3.20.2",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4"
  }
}
